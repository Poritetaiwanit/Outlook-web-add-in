<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="TaskPaneApp">

  <Id>00000000-0000-0000-0000-000000000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Porite Taiwan</ProviderName>
  <DefaultLocale>zh-tw</DefaultLocale>

  <DisplayName DefaultValue="Porite - Smart Alerts 寄送前檢視"/>
  <Description DefaultValue="寄送前顯示收件人、主旨、附件資訊"/>

  <IconUrl DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/icon-128.png"/>
  <SupportUrl DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net"/>

  <AppDomains>
    <AppDomain>https://ashy-smoke-03b7c5800.3.azurestaticapps.net</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.15"/>
    </Sets>
  </Requirements>

  <ov:VersionOverrides xsi:type="ov:VersionOverridesV1_1">
    <ov:Requirements>
      <ov:Sets DefaultMinVersion="1.15">
        <ov:Set Name="Mailbox"/>
      </ov:Sets>
    </ov:Requirements>

    <ov:Hosts>
      <ov:Host xsi:type="ov:Mailbox">
        <ov:Runtimes>
          <ov:Runtime resid="RuntimeHTML" lifetime="long"/>
        </ov:Runtimes>
        <ov:DesktopFormFactor>
          <ov:ExtensionPoint xsi:type="ov:LaunchEvent">
            <ov:LaunchEvents>
              <ov:LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler" SendMode="PromptUser"/>
            </ov:LaunchEvents>
            <ov:SourceLocation resid="RuntimeHTML"/>
          </ov:ExtensionPoint>
        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>

    <ov:Resources>
      <bt:Urls>
        <bt:Url id="RuntimeHTML" DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/runtime.html"/>
        <bt:Url id="RuntimeJS" DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/launchevent.js"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/icon-16.png"/>
        <bt:Image id="Icon32" DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/icon-32.png"/>
      </bt:Images>
    </ov:Resources>
  </ov:VersionOverrides>
</OfficeApp>
