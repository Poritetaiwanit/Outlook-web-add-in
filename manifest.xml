<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="Mail"
           Version="1.0.0.0">
  <Id>00000000-0000-0000-0000-000000000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Porite Taiwan</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Send Confirmation"/>
  <Description DefaultValue="Shows recipients, domains, subject, and attachments before sending."/>
  <IconUrl DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://ashy-smoke-03b7c5800.3.azurestaticapps.net/support"/>

  <AppDomains>
    <AppDomain>https://ashy-smoke-03b7c5800.3.azurestaticapps.net</AppDomain>
  </AppDomains>

  <Permissions>ReadItem</Permissions>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIsRule" ItemType="Message" FormType="Compose"/>
  </Rule>

  <Extensions>
    <ExtensionPoint xsi:type="LaunchEvent">
      <LaunchEvents>
        <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler"/>
      </LaunchEvents>
      <SourceLocation DefaultValue="https://yourdomain.com/events/onSend.html"/>
    </ExtensionPoint>
  </Extensions>
</OfficeApp>